{% extends 'base.html.twig' %}

{% block title %}{{ 'site_title.login'|trans }}{% endblock %}

{% block body %}

    {#
        Undescription this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

<main class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <!-- Site name -->
                                <div class="text-center my-3">
                                    <div class="sidebar-heading text-center">
                                        <img
                                                class="img-fluid me-2"
                                                width=50px
                                                src="{{ asset('uploads/icon-coffee.svg') }}"
                                                alt="{{ 'site_logo_img.alt'|trans }}">
                                        <h2 class="d-inline-block" style="vertical-align: sub;">
                                            TeaTime
                                        </h2>
                                        <p class="">
                                            {{ 'login.text.catchprase'|trans }}
                                        </p>
                                    </div>
                                </div>

                                <!-- Pills navigation -->
                                <ul class="nav nav-pills nav-justified mb-3">
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link active" href="{{ url('app_login') }}" role="tab" aria-selected="false">
                                            {{ 'login.button.login'|trans }}
                                        </a>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link" href="{{ url('app_register') }}" role="tab" aria-selected="true">
                                            {{ 'login.button.register'|trans }}
                                        </a>
                                    </li>
                                </ul>

                                <!-- Login form -->
                                <div class="tab-content">
                                        <form class="needs-validation" method="POST">
                                            {% if error %}
                                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                            {% endif %}
                                            <!-- login input -->
                                            <div class="form-outline mb-4 was-validated">
                                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email"/>
                                                <label class="form-label" for="inputEmail">{{ 'label.login.email'|trans }}</label>
                                            </div>

                                            <!-- Password input -->
                                            <div class="form-outline mb-4 was-validated">
                                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                                <label class="form-label" for="inputPassword">{{ 'label.login.password'|trans }}</label>
                                            </div>

                                            <input type="hidden" name="_csrf_token"
                                                   value="{{ csrf_token('authenticate') }}"
                                            >

                                            <!-- 2 column grid layout -->
                                            <div class="row mb-4">
                                                <div class="col-md-6 d-flex justify-content-center">
                                                    <!-- Checkbox -->
                                                    <div class="form-check mb-3 mb-md-0 was-validated">
                                                        <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
                                                        <label class="form-check-label" for="loginCheck">{{ 'label.login.remember_me'|trans }}</label>
                                                    </div>
                                                </div>

                                                <div class="col-md-6 d-flex justify-content-center">
                                                    <!-- Simple link -->
                                                    <a href="#!"data-bs-toggle="modal" data-bs-target="#resetPasswordtModal">{{ 'label.login.reset_password'|trans }}</a>
                                                </div>
                                            </div>

                                            <!-- Submit button -->
                                            <button type="submit" class="btn btn-primary btn-block mb-4">{{ 'label.login.submit'|trans }}</button>
                                        </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 d-flex login-bg-image">
                            <img
                                    class="col-lg-12 d-flex login-bg-image"
                                    src="{{asset('uploads/bg-tea.jpg')}}"
                                    alt="{{ 'login.bg_img.alt'|trans }}"
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<div class="modal fade" id="resetPasswordtModal" tabindex="-1" aria-labelledby="resetPasswordtModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'label.login.modal.title'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ 'label.login.modal.body'|trans }}
            </div>
        </div>
    </div>
</div>
{% endblock %}





