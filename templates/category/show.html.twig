{% extends 'default/_dashboard.html.twig' %}

{% block title %}{{ 'site_title.category.show'|trans }}: {{ record.title }}{% endblock %}

{% block section_title %}
    <h1 class="text-left">{{ record.title }}</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-success" href="{{ path('category_create') }}">{{ 'button.category.action_create'|trans }}</a>
    {% endif %}
{% endblock %}

{% block main %}
    {% if record is defined %}
        <h3>{{ 'label.id'|trans }}: {{ record.id }}</h3>
        <h3>{{ 'label.category.title'|trans }}</h3>
        <p>{{ record.title }}</p>
        <h3>{{ 'label.created_at'|trans }}</h3>
        <p>{{ record.createdAt|date('Y-m-d') }}</p>
        <h3>{{ 'label.updated_at'|trans }}</h3>
        <p>{{ record.updatedAt|date('Y-m-d') }}</p>
        <a href="{{ url('tag_index') }}" title="{{ 'action.back_to_list'|trans }}">
            {{ 'action.back_to_list'|trans }}
        </a>
    {% else %}
        <p>{{ 'message.record_not_exist'|trans }}</p>
    {%  endif %}

{% endblock %}